<!DOCTYPE html>
<html>
<head>
    <title>WebApp Node.js</title>
</head>
<body>
    <h1>Test Base de Donn√©es</h1>
    <ul>
        <% items.forEach(item => { %>
        <li>
            <%= item.name %>
            <form action="/delete/<%= item.id %>" method="post" style="display:inline;">
                <button type="submit">Supprimer</button>
            </form>
            <form action="/update/<%= item.id %>" method="post" style="display:inline;">
                <input type="text" name="name" placeholder="Nouveau nom">
                <button type="submit">Modifier</button>
            </form>
        </li>
        <% }); %>
    </ul>
    <form action="/add" method="post">
        <input type="text" name="name" placeholder="Nom">
        <button type="submit">Ajouter</button>
    </form>
</body>
</html>
